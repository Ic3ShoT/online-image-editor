doctype html
head
    meta(charset='utf-8')
    title Online image editor
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet' href='https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css')
    link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css')
    link(rel='stylesheet' href='source/scss/style.css')
.container.disable
    h2 Online Image Editor
    .wrapper
        .editor-panel
            .filter
                label.title Filters
                .options
                    button.active Brightness
                    button Saturation
                    button Inversion
                    button Grayscale
                .slider
                    .filter-info
                        p.name Brightness
                        p.value 100%
                    input(type='range' value='100' min='0' max='200')
            .rotate
                label.title Rotate &amp; Flip
                .options
                    button
                        i.fa-solid.fa-rotate-left
                    button
                        i.fa-solid.fa-rotate-right
                    button
                        i.bx.bx-reflect-vertical
                    button
                        i.bx.bx-reflect-horizontal
        .preview-img
            img(src='img/img_placeholder.svg' alt='preview-img')
    .controls
        button.reset-filter Reset Filters
        .row
            input.file-input(type='file' accept='image/*' hidden)
            button.choose-img Choose Image
            button.save-img Save Image
script(src='js/script.js')